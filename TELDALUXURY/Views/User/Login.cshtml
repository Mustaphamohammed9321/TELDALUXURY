@using (Html.BeginForm("Userlogin", "Users", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container-fluid page-body-wrapper full-page-wrapper" style="margin-top:-20px;">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto text-center">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <div class="brand-logo text-center">
                            <img src="~/Content/Admin/images/thelda.png" alt="logo">
                        </div>
                        <h4 class="text-center">Hello There, Welcome to Telda Luxury</h4>
                        <h6 class="font-weight-light text-center">Sign in to continue.</h6>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="pt-3">
                            <h7 class="text-danger col-12" style="font-size:smaller;">@Html.DisplayFor(model => model.SigninErrorMessage, new { htmlAttributes = new { @class = "font-weight-light text-center text-danger small" } })</h7>
                            <div class="form-group">
                                <div class="col-md-12 text-center">
                                    @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control text-black-50 col-12", @placeholder = "Email Address" } })
                                    <span class="text-danger small" for="inputEmail">@Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger text-center" })</span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12 text-center">
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password" } })
                                    <span class="text-danger small" for="inputEmail">@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger text-center" })</span>
                                </div>
                            </div>

                            <div class="mt-3">
                                <input type="submit" value="Sign In" class="btn btn-block btn-inverse-warning text-black-50 btn-lg font-weight-medium auth-form-btn" />
                                @*<input type="submit" value="sign in">*@
                            </div>
                            <div class="my-2 d-flex justify-content-between align-items-center">
                                <div class="form-check">
                                    <label class="form-check-label text-muted">
                                        <input type="checkbox" class="form-check-input">
                                        Keep me signed in
                                    </label>
                                </div>
                                @Html.ActionLink("Forgot Password?", "Index", new { htmlAttributes = new { @Class = "auth-link text-black" } })
                                @*<a href="" class="auth-link text-black">Forgot password?</a>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->

    @*<div>
            @Html.ActionLink("Back to List", "Index")
        </div>*@
}
